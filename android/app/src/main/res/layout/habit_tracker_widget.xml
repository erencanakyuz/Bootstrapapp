<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Header: App Name -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Tracker"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="8dp" />

    <!-- Today's Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/completed_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#22C55E"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20sp"
            android:textColor="#6B7280"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:id="@+id/total_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:gravity="center" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#22C55E"
        android:layout_marginBottom="8dp" />

    <!-- Streak Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="16sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/current_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 day streak"
            android:textSize="12sp"
            android:textColor="#6B7280" />
    </LinearLayout>

    <!-- Top Habit (if available) -->
    <TextView
        android:id="@+id/top_habit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="11sp"
        android:textColor="#9CA3AF"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>

