<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January 2025"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="12dp" />

    <!-- Calendar Grid (Simplified) -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="6">

        <!-- Week days -->
        <TextView android:text="S" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>
        <TextView android:text="M" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>
        <TextView android:text="T" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>
        <TextView android:text="W" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>
        <TextView android:text="T" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>
        <TextView android:text="F" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>
        <TextView android:text="S" android:textSize="10sp" android:gravity="center" android:padding="4dp" android:textColor="#6B7280"/>

    </GridLayout>

    <!-- Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/completion_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/31 days"
            android:textSize="12sp"
            android:textColor="#374151" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â€¢ "
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:id="@+id/percentage_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48%"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#22C55E" />
    </LinearLayout>

</LinearLayout>
