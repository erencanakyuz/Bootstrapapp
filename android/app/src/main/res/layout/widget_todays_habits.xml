<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today's Habits"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <TextView
            android:id="@+id/completion_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#22C55E" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#22C55E"
        android:layout_marginBottom="12dp" />

    <!-- Habit List Container -->
    <LinearLayout
        android:id="@+id/habits_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Habit items will be added dynamically -->
        <!-- Example habit item: -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="#F9FAFB"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/habit_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="âœ“"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#E5E7EB"
                android:textColor="#22C55E" />

            <TextView
                android:id="@+id/habit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit Name"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/habit_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ 0"
                android:textSize="12sp"
                android:textColor="#F59E0B" />
        </LinearLayout>

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯"
            android:textSize="32sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No habits for today"
            android:textSize="14sp"
            android:textColor="#6B7280" />
    </LinearLayout>

</LinearLayout>
